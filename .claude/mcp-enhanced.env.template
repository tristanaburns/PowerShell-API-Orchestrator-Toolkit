# MCP Configuration - Environment Variables Template
# Copy this to .env and fill in your actual API keys and URLs

# ===============================================
# REQUIRED API KEYS (Essential for core functionality)
# ===============================================

# GitHub Integration (Required for development workflows)
GITHUB_TOKEN=your_github_personal_access_token_here

# Browser Automation (Required for testing and web interaction)
BROWSERBASE_API_KEY=your_browserbase_api_key_here
BROWSERBASE_PROJECT_ID=your_browserbase_project_id_here

# Code Execution Sandbox (Required for secure code execution)
E2B_API_KEY=your_e2b_api_key_here

# ===============================================
# OPTIONAL API KEYS (functionality)
# ===============================================

# Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Backend Services
SUPABASE_URL=https://your_project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
CONVEX_URL=https://your_deployment.convex.cloud

# Vector Search & Embeddings
CHROMA_HOST=localhost
CHROMA_PORT=8000

# Data Analytics
MOTHERDUCK_TOKEN=your_motherduck_token_here

# Observability & Monitoring  
AXIOM_TOKEN=your_axiom_token_here
AXIOM_ORG_ID=your_axiom_org_id_here
GRAFANA_URL=https://your_org.grafana.net
GRAFANA_API_KEY=your_grafana_api_key_here

# Project Management & Documentation
NOTION_API_KEY=secret_your_notion_integration_token_here
LINEAR_API_KEY=your_linear_api_key_here

# Workflow Automation
MAKE_API_KEY=your_make_api_key_here
ZAPIER_API_KEY=your_zapier_api_key_here

# Documentation & Context
CONTEXT7_MAX_TOKENS=20000

# ===============================================
# CLAUDE CODE SETTINGS
# ===============================================

# Enable Sonnet 4 optimizations across all MCP servers
SONNET4_GLOBAL_MODE=true
ULTRATHINKING_ENABLED=true
EXTENDED_CONTEXT_SUPPORT=true

# Task Orchestrator Settings
TASK_ORCHESTRATOR_MAX_CONCURRENT=20
TASK_ORCHESTRATOR_SONNET4_MODE=true

# Sequential Thinking Settings  
SEQUENTIAL_THINKING_MAX_THOUGHTS=50
SEQUENTIAL_THINKING_SONNET4_MODE=true

# Memory System Settings
MEMORY_STORAGE_PATH=./mcp-data/memory
MEMORY_MAX_ENTITIES=10000
MEMORY_SONNET4_OPTIMIZED=true

# ===============================================
# QUICK SETUP COMMANDS
# ===============================================

# To get started quickly with free tiers:
# 1. GitHub Token: https://github.com/settings/tokens (public repos scope)
